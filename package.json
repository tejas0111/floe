{
  "name": "Floe",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=apps/api",
    "start": "npm run start --workspace=apps/api",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules && npm install"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
